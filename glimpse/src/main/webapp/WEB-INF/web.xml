<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<filter>
		<filter-name>ConnectionFilter</filter-name>
		<filter-class>org.glimpse.server.ConnectionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>ConnectionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.glimpse.server.GlimpseManager</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>LoginService</servlet-name>
		<servlet-class>org.glimpse.server.LoginServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>UserDescriptionService</servlet-name>
		<servlet-class>org.glimpse.server.UserDescriptionServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PageDescriptionService</servlet-name>
		<servlet-class>org.glimpse.server.PageDescriptionServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>NewsRetrieverService</servlet-name>
		<servlet-class>org.glimpse.server.news.NewsRetrieverServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>NewsIconServlet</servlet-name>
		<servlet-class>org.glimpse.server.news.NewsIconServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginService</servlet-name>
		<url-pattern>/glimpse_gwt/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UserDescriptionService</servlet-name>
		<url-pattern>/glimpse_gwt/user-description</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>PageDescriptionService</servlet-name>
		<url-pattern>/glimpse_gwt/page-description</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>NewsRetrieverService</servlet-name>
		<url-pattern>/glimpse_gwt/news-retriever</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>NewsIconServlet</servlet-name>
		<url-pattern>/servlets/news-icon</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.glimpse.org/glimpse</taglib-uri>
			<taglib-location>/WEB-INF/tld/glimpse.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>
