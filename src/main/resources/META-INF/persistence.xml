<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence              http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="glimpse" transaction-type="RESOURCE_LOCAL">
        <class>org.glimpse.server.model.Connection</class>
        <class>org.glimpse.server.model.User</class>
        <class>org.glimpse.server.model.ServerTabDescription</class>
        <class>org.glimpse.server.model.ServerColumnDescription</class>
        <class>org.glimpse.server.model.ServerComponentDescription</class>
        <class>org.glimpse.server.model.ServerComponentProperty</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>        
    </persistence-unit>
</persistence>
